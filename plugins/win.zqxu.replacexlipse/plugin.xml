<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="win.zqxu.eclipse"
            id="ReplaceXlipse.commands.category">
      </category>
      <command
            name="replace"
            categoryId="ReplaceXlipse.commands.category"
            id="ReplaceXlipse.commands.replaceCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ReplaceXlipse.commands.replaceCommand"
            class="win.zqxu.eclipse.rex.handlers.ReplaceHandler">
         <enabledWhen>
            <with variable="activePart">
               <instanceof value="org.eclipse.ui.texteditor.ITextEditor"></instanceof>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ReplaceXlipse.commands.replaceCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+R"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:edit?after=find">
            <command
                  commandId="ReplaceXlipse.commands.replaceCommand"
                  id="ReplaceXlipse.menus.replaceCommand"
                  label="%command.label"
                  mnemonic="R">
            </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ReplaceXlipse.toolbars.replaceToolbar">
            <command
                  commandId="ReplaceXlipse.commands.replaceCommand"
                  icon="icons/text_replace.png"
                  tooltip="%command.tooltip"
                  id="ReplaceXlipse.toolbars.replaceCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
